{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ghostOS Queue Schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "script", "status", "created"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_-]+$",
        "description": "Unique task identifier"
      },
      "script": {
        "type": "string",
        "minLength": 1,
        "description": "Shell command to execute"
      },
      "status": {
        "type": "string",
        "enum": ["queued", "running", "done", "failed", "timeout"],
        "description": "Current task state"
      },
      "created": {
        "type": "string",
        "format": "date-time",
        "description": "ISO timestamp when task was added"
      },
      "last_run": {
        "type": "string",
        "format": "date-time",
        "description": "ISO timestamp of last execution attempt"
      },
      "exit_code": {
        "type": "integer",
        "description": "Process exit code (if completed)"
      },
      "output": {
        "type": "string",
        "description": "Command output (truncated if too long)"
      }
    },
    "additionalProperties": false
  }
}